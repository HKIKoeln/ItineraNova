<xrx:container xmlns="http://www.w3.org/1999/xhtml" xmlns:xrx="http://www.monasterium.net/NS/xrx">
  <xrx:css>
    <xrx:id>tag:itineranova.be,2011:/in/css/global</xrx:id>
    <style type="text/css">

/*
*
* Page
*
*/
html {{
    height:100%;
    margin;0px;
    padding:0px;
}}

body, #formWrapper {{
    height: 100%;      /*FF vert. Scrollbar erzwingen ## */
    color:#1a1a1a; 
    background-color:#eff3e1;
    margin:0px;
    padding:0px;
}}

#main * {{
    font-family:"Trebuchet MS", regular, sans-serif;
    font-size:13px;
}}

#main{{
	position:relative;
	float:left;
	width:1000px;
	min-height:800px;
	background-color:white;
	margin:0px;
	padding:0px;
}}

#header{{
	position:relative;
	float:left;
	width:1000px;
	margin:0px;
	padding:0px;
}}

#main-logo{{
	width:999;
	position:relative;
	float:left;
}}

#content{{
	position:relative;
	float:left;
	width:780px;
	margin:0px;
	padding:0px;
	
	font-size:13px;
}}

/*
*
* defaults
*
*/              

img{{
	border:none;
	padding:0px;
	margin:0px;
}}
#debug-pane, img.debug-icon{{
  display:none;
}}
#evtLogContainer{{
  display:none;
}}
.dijitToasterContent{{
	height:100px;
	font-weight:bold;
	background:#8EA384;
	no-repeat 3% 7px;
	color:#666666;
	width:100%;
	margin:0px;
	padding:0px;
	text-align:center;
	border-color:#E1EFDB !important;
}}

/*
*
* Function Links
*
*/
#my-functions{{
  position:relative;
  float:left;
}}

#my-functions a{{
  color:#EF6A2F;
}}

#my-functions .h3{{
  color:#EF6A2F;
  font-weight:bold;
  margin-top:10px;
  font-size:1.1em;
}}

#my-functions .function-links{{
  position:relative;
  float:left;
  background-color:#FFE3D9;
}}

#my-functions .function-link{{
  position:relative;
  float:left;
  margin:10px;
}}

#my-functions *{{
  color:#EF6A2F;
}}

#content .h2 *, #content .h2 {{
	font-size:20px;
	margin-top:15px;
	margin-bottom:15px;
	color:#EF6A2F;
	font-weight:bold;
}}

span.highlight{{
  background:yellow;
}}

/*
*
* Pagination
*
*/
.dpagination-navi{{
  position:relative;
  float:none;
  width:700px;
  font-size:20px;
}}
.dnavigation-item{{
  position:relative;
  float:left;
}}
.dnavigation-item a:link{{
  text-decoration:none;
  color:black;
}}
.dnavigation-item a:visited{{
  text-decoration:none;
  color:black;
}}
#selecteda{{
  color:#EF6A2F;
}}

/*
*
* Text Diff
*
*/
.textdiff {{
  white-space:pre-line;
}}
.textdiff * {{
  margin:0;
  padding:0;
  display:inline;
}}
.textdiff-insert {{
  background:#8DFF54;
  text-decoration:underline;
  font-style:normal;
}}
.textdiff-delete {{
  background:#FF8370;
  text-decoration:line-through;
  font-style:normal;
}}

    </style>
	</xrx:css>
	<xrx:css>
	  <xrx:id>tag:itineranova.be,2011:/in/css/transcription-preview</xrx:id>
	  <style type="text/css">

#comment-textarea .xfValue{{
  position:relative;
  float:left;
  width:745px;
  font-size:16px;
  padding:10px;
  color:mediumOrchid;
}}

.revision-heading{{
  color:mediumOrchid;
}}

.CodeMirror{{
  width:730px;
}}

	  </style>
	</xrx:css>
  <xrx:css>
    <xrx:id>tag:itineranova.be,2011:/in/css/forms</xrx:id>
    <style type="text/css">

.standard-form .bfVerticalTableInfo,
.standard-form .bfVerticalTableValue{{
  width:250px;
}}

.standard-form .bfVerticalTableLabel{{
  width:150px;
  padding:7px;
  text-align:right;
}}

.standard-form .xfAlert,
.standard-form .xfHint,
.standard-form .xfHelp,
.standard-form .info{{
  top:0px;
  padding:7px;
  margin-bottom:5px;
  border:solid 1px;
  width:250px;
}}

.standard-form .xfSelect1 select{{
  width:268px;
  margin:0;
}}

.standard-form .xfValue{{
  width:250px;
  padding:8px;
  margin-bottom:5px;
  -moz-border-radius-topleft:8px;
  -moz-border-radius-bottomleft:8px;
  -webkit-border-top-left-radius:8px;
  -webkit-border-bottom-left-radius:8px;
}}

.standard-form .xfAlert{{
  background:#FFCFCF;
  color:#801B1B;
  -moz-border-radius-topright:8px;
  -moz-border-radius-bottomright:8px;
  -webkit-border-top-right-radius:8px;
  -webkit-border-bottom-right-radius:8px;
  background: #FFCFCF url(../)
  no-repeat scroll 2% 5px;
  margin:0;
  /*overflow:hidden; */
  white-space:nowrap;
  border-color:#E5A3A3 !important;
  position: relative;
}}

.standard-form .xfHint{{
  background:#F2F2F2 url(../)
  no-repeat 3% 7px;
  color:#666666;
  -moz-border-radius-topright:8px;
  -moz-border-radius-bottomright:8px;
  -webkit-border-top-right-radius:8px;
  -webkit-border-bottom-right-radius:8px;
  margin:0;
  /*overflow: hidden;*/
  white-space:nowrap;
  border-color:#DBDBDB !important;
  position: relative;
}}

.standard-form .info{{
  background: #F0FEE9 url(../)
  no-repeat 3% 7px;
  color:#666666;
  -moz-border-radius-topright 8px;
  -moz-border-radius-bottomright:8px;
  -webkit-border-top-right-radius:8px;
  -webkit-border-bottom-right-radius:8px;
  margin:0;
  /*overflow:hidden;*/
  white-space:nowrap;
  border-color:#E1EFDB !important;
  position: relative;
}}

.standard-form .dijitArrowButton{{
  border:none;
  background:none;
}}
    </style>
  </xrx:css>
</xrx:container>