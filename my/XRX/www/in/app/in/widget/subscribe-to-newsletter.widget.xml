<xrx:widget xmlns:xrx="http://www.monasterium.net/NS/xrx"
	xmlns="http://www.w3.org/1999/xhtml">
	<xrx:id>tag:itineranova.be,2011:/in/widget/subscribe-to-newsletter</xrx:id>
  <xrx:title>
    <xrx:i18n>
      <xrx:key>newsletter</xrx:key>
      <xrx:default>Newsletter</xrx:default>
    </xrx:i18n>
  </xrx:title>
  <xrx:subtitle></xrx:subtitle>
  <xrx:description></xrx:description>
  <xrx:author>jochen.graf@uni-koeln.de</xrx:author>
	<xrx:portal>tag:itineranova.be,2011:/in/portal/default</xrx:portal>
	<xrx:res>
	  <xrx:css>
			<style type="text/css">

#mc-embedded-subscribe-form{{
	font: normal 100% Arial, sans-serif;
	font-size: 10px;
  position:relative;
  float:left;
  width:600px;
  margin:0;
  padding:0;
}}
#newsletter-fieldset{{
	-moz-border-radius: 4px;
	border-radius: 4px;
	-webkit-border-radius: 4px;
	border: 1px solid #ccc;
	padding-top: 1.5em;
	margin: .5em 0;
	background-color: #fff;
	color: #000;
}}
.mc-field-group{{
	margin: 1.3em 5%;
	clear: both;
	overflow: hidden;
}}
	.newsletter-label{{
	display: block;
	margin: .3em 0;
	line-height: 1em;
	font-weight: bold;
}}
.newsletter-input-field{{
	margin-right: 1.5em;
	padding: .2em .3em;
	width: 95%;
	float: left;
	z-index: 999;
}}
#mce-responses{{
	float: left;
	top: -1.4em;
	padding: 0em .5em 0em .5em;
	overflow: hidden;
	width: 90%;
	margin: 0 5%;
	clear: both;
}}
#mce-error-response{{
	display: none;
	margin: 1em 0;
	padding: 1em .5em .5em 0;
	font-weight: bold;
	float: left;
	top: -1.5em;
	z-index: 1;
	width: 80%;
	background: #FBE3E4;
	color: #D12F19;
}}
#mce-success-response{{
	display: none;
	margin: 1em 0;
	padding: 1em .5em .5em 0;
	font-weight: bold;
	float: left;
	top: -1.5em;
	z-index: 1;
	width: 80%;
	background: #E3FBE4;
	color: #529214;
}}
#mce-embedded-subscribe{{
	clear: both;
	width: auto;
	display: block;
	margin: 1em 0 1em 5%;
}}
.btn{{
  margin:10px;
  float:right;
  margin-right:70px;
}}

	    </style>
    </xrx:css>
	</xrx:res>
	<xrx:init>
	  <xrx:processor>
	    <xrx:xformsflag>false</xrx:xformsflag>
	  </xrx:processor>
	</xrx:init>
	<xrx:view>
		<div id="dsubscribe-to-newsletter">
			<div class="h2">
			  <xrx:i18n>
					<xrx:key>join-our-mailing-list</xrx:key>
					<xrx:default>join our mailing list</xrx:default>
				</xrx:i18n>
			</div>
			<script type="text/javascript"
				src="http://itineranova.us1.list-manage.com/js/jquery-1.2.6.min.js" />
			<script type="text/javascript"
				src="http://itineranova.us1.list-manage.com/js/jquery.validate.js" />
			<script type="text/javascript"
				src="http://itineranova.us1.list-manage.com/js/jquery.form.js" />
			<script type="text/javascript"
				src="http://itineranova.us1.list-manage1.com/subscribe/xs-js?u=b03ea79dcbd8587a8c3931a42&amp;id=cf7087cd98" />
			<div id="mc_embed_signup">
				<form
					action="http://itineranova.us1.list-manage.com/subscribe/post?u=b03ea79dcbd8587a8c3931a42&amp;id=cf7087cd98"
					method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form"
					class="validate" target="_blank">
					<fieldset id="newsletter-fieldset">
						<div class="mc-field-group">
							<label for="mce-EMAIL" class="newsletter-label">
							  <xrx:i18n>
									<xrx:key>email-address</xrx:key>
									<xrx:default>Email Address</xrx:default>
								</xrx:i18n>
							</label>
							<input type="text" value="" name="EMAIL"
								class="required email newsletter-input-field" id="mce-EMAIL" />
						</div>
						<div class="mc-field-group">
							<label for="mce-FNAME" class="newsletter-label">
							  <xrx:i18n>
							    <xrx:key>first-name</xrx:key>
							    <xrx:default>First Name</xrx:default>
							  </xrx:i18n>
							</label>
							<input type="text" value="" name="FNAME" class="newsletter-input-field"
								id="mce-FNAME" />
						</div>
						<div class="mc-field-group">
							<label for="mce-LNAME" class="newsletter-label">
							  <xrx:i18n>
							    <xrx:key>last-name</xrx:key>
							    <xrx:default>Last Name</xrx:default>
							  </xrx:i18n>
							</label>
							<input type="text" value="" name="LNAME" class="newsletter-input-field"
								id="mce-LNAME" />
						</div>
						<div id="mce-responses">
							<div class="response" id="mce-error-response" />
							<div class="response" id="mce-success-response" style="" />
						</div>
						<div style="display:none">
						  <xrx:i18n>
						    <xrx:key>subscribe</xrx:key>
						    <xrx:default>Subscribe</xrx:default>
						  </xrx:i18n>
						</div>
						<div>
						  {
						  let $label := i18n:value('subscribe', $xrx:lang) 
						  return
							<input type="submit" value="{ if($label) then $label else 'Subscribe' }" name="subscribe"
								id="mc-embedded-subscribe" class="btn" />
						  }
						</div>
					</fieldset>
					<a href="#" id="mc_embed_close" class="mc_embed_close" style="display:none;">
					  <xrx:i18n>
							<xrx:key>close</xrx:key>
							<xrx:default>Close</xrx:default>
					  </xrx:i18n>
					</a>
				</form>
			</div>
		</div>
	</xrx:view>
</xrx:widget>